<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RememberApp" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status & Navigation bar color. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">@color/primaryLightColor</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/primaryLightColor</item>
        <item name="colorOutline">@color/primaryColor</item>
        <item name="actionBarTheme">@style/Theme.RememberApp.ActionBar</item>
    </style>

    <!-- Implemented for Top App Bar -->
    <style name="Theme.RememberApp.ActionBar" parent="Theme.Material3.Light">

        <!-- Text Color -->
        <item name="colorSurface">@color/primaryColor</item>
        <item name="colorOnSurface">@color/primaryTextColor</item>

        <!-- Up button & Navigation Drawer color -->
        <item name="colorControlNormal">@color/primaryLightColor</item>
    </style>
</resources>