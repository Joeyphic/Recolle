<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:background="@color/primaryColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/task_detail_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/task_list_item_banner"
            app:tint="@color/primaryColor"/>

        <TextView
            android:id="@+id/task_name_label"
            style="@style/Widget.Remember.TextView"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:text="Name:"
            android:textColor="@color/primaryTextColor"
            tools:text="Name:" />

        <TextView
            android:id="@+id/task_name"
            style="@style/Widget.Remember.TextView"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/margin"
            android:textColor="@color/primaryTextColor"
            tools:text="Schedule the meeting" />

        <TextView
            android:id="@+id/task_priority_label"
            style="@style/Widget.Remember.TextView"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:text="Priority:"
            android:textColor="@color/primaryTextColor"
            tools:text="Priority:" />

        <TextView
            android:id="@+id/task_priority"
            style="@style/Widget.Remember.TextView"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:textColor="@color/primaryTextColor"
            tools:text="High" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/label_subtask_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginHorizontal="@dimen/margin"
        android:layout_marginTop="@dimen/margin"
        android:text="@string/subtasks"
        android:textStyle="bold"
        android:visibility="invisible"
        tools:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_subtask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/imageView"
        android:layout_below="@+id/label_subtask_title"
        android:layout_marginHorizontal="@dimen/margin"
        android:layout_marginVertical="8dp"
        android:background="@drawable/subtask_list_border"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:padding="@dimen/margin"
        app:srcCompat="@drawable/complete_task_animation" />
</RelativeLayout>